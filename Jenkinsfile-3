pipeline {
    agent {
        node {
            label 'nodejs'
        } 
    }

    stages {
        stage('RUN Tests') {
            parallel {

                stage('Frontend Tests') {
                    steps {
                        sh 'node ./frontend/test.js'
                    }
                }   

                stage('Backend Tests') {
                    steps {
                        sh 'node ./backend/test.js'
                    }
                }   
            }
        }
        
    }
}