pipeline {
    agent {
        node {
            label 'nodejs'
        } 
    }
    parameters {

        booleanParam(name: "RUN_FRONTEND_TESTS", defaultValue: false)
        choice(name: 'BRANCH_NAME', choices: ['main','stage'], description: 'Branch name where the pipeline should be executed')
    }
    stages {
        stage('RUN Tests') {
            parallel {

                stage('Frontend Tests') {

                    when { expression { params.RUN_FRONTEND_TESTS } }

                    steps {
                        sh 'node ./frontend/test.js'
                    }
                }   

                stage('Backend Tests') {
                    steps {
                        sh 'node ./backend/test.js'
                    }
                }   
            } // parallel
        } // stage

        stage('Deploy') {
            when {
                expression { params.BRANCH_NAME == 'origin/main' }
                beforeInput true
            }
            input {
                message 'Deploy the application?'
            }
            steps {
                echo 'Deploying...'
            } 
        }
        
    }
}